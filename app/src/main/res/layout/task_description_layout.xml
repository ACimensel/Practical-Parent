<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/task_dialog_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="65dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/task_dialog_imageBtnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_dialog_txtName"
        android:layout_alignParentEnd="true"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/task_dialog_txtDescription"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_dialog_txtName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="75dp" />

    <Button
        android:id="@+id/task_dialog_btnTookTurn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_dialog_txtTurnChild"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/took_turn" />

    <ImageView
        android:id="@+id/task_dialog_imagePortrait"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_below="@+id/task_dialog_txtName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="136dp"
        app:srcCompat="@drawable/default_child" />

    <TextView
        android:id="@+id/task_dialog_txtTurnChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_dialog_imagePortrait"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="88dp"
        android:gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/task_dialog_btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_dialog_btnTookTurn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="241dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:text="@string/cancel" />

</RelativeLayout>