<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTimeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/chooseTime_txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/choose_or_enter_the_time"
        android:textAlignment="center"
        android:textColorHint="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <RadioGroup
        android:id="@+id/chooseTime_radioTimeOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chooseTime_txtTitle"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/chooseTime_txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/chooseTime_inputTime"
        app:layout_constraintVertical_bias="0.116" />

    <EditText
        android:id="@+id/chooseTime_inputTime"
        android:layout_width="71dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/chooseTime_txtTitle"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/chooseTime_txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/chooseTime_txtTitle"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/chooseTime_btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:text="@string/start_timer"
        app:layout_constraintEnd_toEndOf="@+id/chooseTime_txtTitle"
        app:layout_constraintStart_toStartOf="@+id/chooseTime_txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/chooseTime_radioTimeOptions" />

</androidx.constraintlayout.widget.ConstraintLayout>