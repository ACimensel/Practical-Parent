<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingTime">

    <TextView
        android:id="@+id/choosing_timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_or_enter_the_time"
        android:textAlignment="center"
        android:textColorHint="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <RadioGroup
        android:id="@+id/choosing_time_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/choosing_timer_text"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/choosing_timer_text"
        app:layout_constraintTop_toBottomOf="@+id/choosing_time_value"
        app:layout_constraintVertical_bias="0.116" />

    <EditText
        android:id="@+id/choosing_time_value"
        android:layout_width="71dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/choosing_timer_text"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/choosing_timer_text"
        app:layout_constraintTop_toBottomOf="@+id/choosing_timer_text"
        app:layout_constraintVertical_bias="0.056"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/start_time_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="204dp"
        android:text="@string/start_timer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/choosing_timer_text"
        app:layout_constraintTop_toBottomOf="@+id/choosing_time_options"
        app:layout_constraintVertical_bias="0.983" />

    <Button
        android:id="@+id/cancel_timer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="@+id/start_time_btn"
        app:layout_constraintEnd_toEndOf="@+id/choosing_timer_text"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/start_time_btn"
        app:layout_constraintTop_toTopOf="@+id/start_time_btn"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>