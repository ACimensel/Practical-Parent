<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_containerButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_txtTitle"
        app:layout_constraintVertical_bias="0.3">

        <Button
            android:id="@+id/main_btnFlipCoin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/flip_coin"
            app:layout_constraintEnd_toEndOf="@+id/main_containerButtons"
            app:layout_constraintStart_toStartOf="@+id/main_containerButtons"
            app:layout_constraintTop_toTopOf="@+id/main_containerButtons" />

        <Button
            android:id="@+id/main_btnTimeout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/timeout"
            app:layout_constraintEnd_toEndOf="@+id/main_btnFlipCoin"
            app:layout_constraintStart_toStartOf="@+id/main_btnFlipCoin"
            app:layout_constraintTop_toBottomOf="@+id/main_btnFlipCoin" />

        <Button
            android:id="@+id/main_btnChildren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/children"
            app:layout_constraintEnd_toEndOf="@+id/main_btnTimeout"
            app:layout_constraintStart_toStartOf="@+id/main_btnTimeout"
            app:layout_constraintTop_toBottomOf="@+id/main_btnTimeout" />

        <Button
            android:id="@+id/main_btnAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/about"
            app:layout_constraintEnd_toEndOf="@+id/main_btnChildren"
            app:layout_constraintStart_toStartOf="@+id/main_btnChildren"
            app:layout_constraintTop_toBottomOf="@+id/main_btnChildren" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>