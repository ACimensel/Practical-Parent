<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.flame">
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/practical_parent_icon"
        android:label="@string/app_name_short"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <receiver android:name=".TimerAlarmReceiver" />
        <activity
            android:name=".AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseTimeActivity"
            android:screenOrientation="portrait"
            android:noHistory="true" />
        <activity
            android:name=".TimeoutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChildrenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChildEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FlipCoinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>